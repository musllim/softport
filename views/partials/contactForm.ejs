<div class="row">
  <div class="col-md-8 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h3 class="text-dark mb-2">Contact us</h3>
        <div class="row">
          <div class="form-group col-sm-4">
            <label for="exampleInputName1">Name</label>
            <input
              type="text"
              class="form-control"
              id="exampleInputName1"
              placeholder="Name"
            />
          </div>
          <div class="form-group col-sm-4">
            <label for="exampleInputName1">Email</label>
            <input
              type="text"
              class="form-control"
              id="exampleInputName1"
              placeholder="Email"
            />
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-8">
            <label for="exampleInputName1">Subject</label>
            <input
              type="text"
              class="form-control"
              id="exampleInputName1"
              placeholder="subject"
            />
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-8">
            <label for="exampleTextarea1">Message</label>
            <textarea
              class="form-control"
              id="exampleTextarea1"
              rows="2"
            ></textarea>
          </div>
        </div>
        <button class="btn btn-primary">send</button>
      </div>
    </div>
  </div>

  <div class="col-md-4 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between pb-3">
          <h4 class="card-title mb-0">Notifications</h4>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
              <a
                class="nav-link count-indicator"
                id="messageDropdown"
                href="#"
                data-toggle="dropdown"
                aria-expanded="false"
              >
                <i class="mdi mdi-bell-outline"></i>
                <span class="count"><%=locals.notifications.length%></span>
              </a>
            </li>
          </ul>
          <!-- <p class="mb-0 text-muted"></p> -->
        </div>
        <ul class="timeline">
          <% locals.notifications.forEach(notification => {%>
          <li class="timeline-item">
            <p class="timeline-content">
              <a href="#"><%= notification.sender.name %></a> <%=
              notification.message %>
            </p>
            <p class="event-time">
              <%=new Date(notification.date).toDateString() %>
            </p>
          </li>
          <%}) %>
        </ul>
        <a class="d-block mt-3" href="#">Show all</a>
      </div>
    </div>
  </div>
</div>
